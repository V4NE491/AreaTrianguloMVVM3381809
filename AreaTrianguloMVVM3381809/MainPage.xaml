<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AreaTrianguloMVVM3381809.ViewModels"
             x:Class="AreaTrianguloMVVM3381809.MainPage">

    <ContentPage.BindingContext>
        <viewmodels:AreaViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="20">
        <Label Text="Lado A:"/>
        <Entry Text="{Binding LadoA}" Keyboard="Numeric"/>

        <Label Text="Lado B:"/>
        <Entry Text="{Binding LadoB}" Keyboard="Numeric"/>

        <Label Text="Lado C:"/>
        <Entry Text="{Binding LadoC}" Keyboard="Numeric"/>

        <Label Text="Área:"/>
        <Label Text="{Binding Area}" FontAttributes="Bold"/>

    </StackLayout>

</ContentPage>
